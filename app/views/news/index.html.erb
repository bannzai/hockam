<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @news_list.each do |news| %>
        <div class="card" style="width: 18rem;">
          <div class="wrapper">
            <img class="card-img-top img-fluid" src="<%= news.header_image_url =%>">
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= news.title %></h5>
            <p class="card-text"><%= news.description[0, 100] %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
